@page
@model VideoStoreManagement.Pages.MoviePages.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
    <div class="container">
        <main role="main" class="pb-3">
            <h1>Delete</h1>
            <div>
                @if (@ViewData["checkError"] == null || @ViewData["checkError"].ToString() == "false")
                {
                    <h3>Are you sure you want to delete this?</h3>
                    <h4>Movie</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Movie.Title)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Movie.Title)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Movie.Release)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Movie.Release)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Movie.Copies)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Movie.Copies)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Movie.Cost)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Movie.Cost)
                        </dd>
                    </dl>
                }
                else
                {
                    <h1 style="color:red;">Error Somthing Unexpedited happened</h1>
                    <p style="color:red;"><strong>Trouble shooting:</strong> @ViewData["errorMessage"]</p>
                    <p style="color:red;"><strong>@ViewData["customErrorMessagePart1"]</strong></p>
                    <p style="color:red;"><strong>@ViewData["customErrorMessagePart2"]</strong></p>
                }
                <form method="post">
                    <input type="hidden" asp-for="Movie.Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-page="./Index">Back to List</a>
                </form>
            </div>
        </main>
    </div>
