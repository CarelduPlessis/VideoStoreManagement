@page
@model VideoStoreManagement.Pages.MovieRentalPages.EditModel

@{
    ViewData["Title"] = "Edit";
}
    <div class="container">
        <main role="main" class="pb-3">
            <h1>Edit</h1>

            <h4>MovieRental</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="MovieRental.Id" />
                        <div class="form-group">
                            <label asp-for="MovieRental.DateIsued" class="control-label"></label>
                            <input asp-for="MovieRental.DateIsued" class="form-control" />
                            <span asp-validation-for="MovieRental.DateIsued" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MovieRental.DateReterned" class="control-label"></label>
                            <input asp-for="MovieRental.DateReterned" class="form-control" />
                            <span asp-validation-for="MovieRental.DateReterned" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="MovieRental.IsMovieLateReturned" /> @Html.DisplayNameFor(model => model.MovieRental.IsMovieLateReturned)
                            </label>
                        </div>
                        <div class="form-group">
                            <label asp-for="MovieRental.MovieFK" class="control-label"></label>
                            <select asp-for="MovieRental.MovieFK" class="form-control" asp-items="ViewBag.MovieFK"></select>
                            <span asp-validation-for="MovieRental.MovieFK" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MovieRental.CustomerFK" class="control-label"></label>
                            <select asp-for="MovieRental.CustomerFK" class="form-control" asp-items="ViewBag.CustomerFK"></select>
                            <span asp-validation-for="MovieRental.CustomerFK" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-page="./Index">Back to List</a>
            </div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
        </main>
    </div>